@import "../movie/movie.wxss";
.search{
    display: flex;
    flex-direction: row;
    padding-left: 20px;
    padding-top: 20px;
    font-size: 14px;
}
.search button{
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 10px;
    border-left: 0;
    background: #dd5d0e;
    color:white;
    text-shadow: black 0 1px 0;
}
.input{
    width: 60%;
    background: white;
    border:1px solid #CCC;
    color:black;
    box-shadow: inset 0 0 10px #CCC;
}
.inputShow{
    padding-left: 20px;
    color:#fff;
    font-size: 12px;
}
.search .btnClick{
    background-color: palevioletred;
}