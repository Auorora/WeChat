.content{
    background-color: #3A3A3A;
    min-height: 100%;
}
.casts{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.casts image{
    width: 180rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}
.detail{
    padding-left: 20px;
    padding-top: 10px;
    color: white;
    font-size: 14px;
    line-height: 20px;
}
.hr{
    height: 2px;
    width: 100%;
    background-color: black;
    border-top: white 1px solid;
    border-bottom : white 1px solid;
    opacity : 0.2;
}