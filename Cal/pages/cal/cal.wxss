.content{
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    background: url(../../assets/image/bg1.png) repeat;
    padding-top: 30rpx;
}
.screen{
    background-color: #fff;
    border-radius: 3px;
    text-align: right;
    width: 720rpx;
    height: 100rpx;
    line-height: 100rpx;
    padding-right: 10rpx;
    margin-bottom: 30rpx;
}
.btnGroup{
    display: flex;
    flex-direction: row;
}
.item{
    width: 160rpx;
    margin: 10rpx;
    min-height: 150rpx;
    line-height: 150rpx;
    text-shadow: 0 1px 1px rgba(0,0,0,0.3);
    border-radius: 3px;
    text-align: center;
}
.orange{
    color:#fef4e9;
    border:1px solid #da7c0c;
    background: #f78d1d;
}
.blue{
    color:#d9eef7;
    border:1px solid #0076a3;
    background: #0095cd;
}